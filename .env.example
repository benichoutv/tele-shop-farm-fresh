# Server Configuration
NODE_ENV=production
PORT=3000
APP_BASE_URL=http://localhost:3000

# Database Configuration
# Type: 'sqlite' (default) or 'postgresql'
DB_TYPE=sqlite
DB_PATH=./database.sqlite

# For PostgreSQL (if DB_TYPE=postgresql)
# DATABASE_URL=postgresql://user:password@localhost:5432/rsliv

# Upload Directory
UPLOAD_DIR=/var/www/rsliv/uploads

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-very-secure-random-secret-key-here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_ADMIN_CONTACT=@your_telegram_username
